rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =========================================================================
    // SYSTEM: CIPHER PROTECTION PROTOCOLS v2
    // STATUS: REVISED
    // =========================================================================

    // HELPER FUNCTIONS
    
    // Check if the authenticated user's ID matches the requested target
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Check if the user has an elevated role (manager, owner, admin)
    function isManager() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return request.auth != null && (role == 'manager' || role == 'owner' || role == 'admin' || role == 'superadmin');
    }

    // =========================================================================
    // COLLECTIONS
    // =========================================================================

    // 1. USERS COLLECTION
    // Policy: Users can only read/write their OWN document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // 1.5. PUBLIC WORKERS (For Verification)
    // Policy: Authenticated users can READ. Only Managers can WRITE.
    match /public_workers/{workerId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }

    // 2. BINGO HALLS COLLECTION
    // Policy: Public Read, Manager Write.
    match /bingo_halls/{hallId} {
      allow read: if true;
      allow write: if isManager();
      
      // Tournaments Subcollection
      match /tournaments/{tournamentId} {
        allow read: if true;
        allow write: if isManager();
      }
    }

    // 3. TRANSACTIONS COLLECTION
    // Policy: User Read Own, Manager Read All, Append-Only (No Delete).
    match /transactions/{transactionId} {
      // Create: Authenticated users can create, but MUST claim the transaction as their own.
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Read: Users see their own; Managers see everything.
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || 
                     isManager();
      
      // Update/Delete: DENIED. Ledger integrity must be maintained.
      allow update, delete: if false;
    }

    // 4. RAFFLES & SPECIALS (Added for Phase 20)
    match /raffles/{raffleId} {
      allow read: if true;
      allow write: if request.auth != null; // Allowing auth users to seed for now
    }
    match /specials/{specialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 5. COLLECTION GROUP QUERIES
    match /{path=**}/tournaments/{tournamentId} {
      allow read: if true;
    }
  }
}
